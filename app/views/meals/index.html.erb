<h1>Listing meals</h1>

<table>
  <thead>
    <tr>
      <th>Consumer name</th>
      <th>Consumer</th>
      <th>Dish image code</th>
      <th>Dish name</th>
      <th>Dish</th>
      <th>Meal date</th>
      <th>Restaurant name</th>
      <th>Restaurant image code</th>
      <th>Restaurant</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.consumer_name %></td>
        <td><%= meal.consumer_id %></td>
        <td><%= meal.dish_image_code %></td>
        <td><%= meal.dish_name %></td>
        <td><%= meal.dish_id %></td>
        <td><%= meal.meal_date %></td>
        <td><%= meal.restaurant_name %></td>
        <td><%= meal.restaurant_image_code %></td>
        <td><%= meal.restaurant_id %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

